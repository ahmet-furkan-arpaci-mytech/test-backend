{
  "info": {
    "name": "Source Follow API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for managing news source follows including the new bulk sync endpoint."
  },
  "item": [
    {
      "name": "List All Sources",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/sources",
          "host": [
            "{{baseUrl}}"
          ]
        }
      }
    },
    {
      "name": "List Followed Sources",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{bearerToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/sources/followed",
          "host": [
            "{{baseUrl}}"
          ]
        }
      }
    },
    {
      "name": "Follow Source",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{bearerToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/sources/{{sourceId}}/follow",
          "host": [
            "{{baseUrl}}"
          ]
        }
      }
    },
    {
      "name": "Unfollow Source",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{bearerToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/sources/{{sourceId}}/follow",
          "host": [
            "{{baseUrl}}"
          ]
        }
      }
    },
    {
      "name": "Bulk Sync Follows",
      "request": {
        "method": "POST",
        "description": "Returns the list of sources that were followed/unfollowed in the result payload.",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{bearerToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "[\n  {\n    \"sourceId\": \"source-1\",\n    \"isFollowed\": true\n  },\n  {\n    \"sourceId\": \"source-2\",\n    \"isFollowed\": false\n  }\n]"
        },
        "url": {
          "raw": "{{baseUrl}}/sources/follow/bulk",
          "host": [
            "{{baseUrl}}"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api/v1"
    },
    {
      "key": "apiKey",
      "value": "test-api-key"
    },
    {
      "key": "bearerToken",
      "value": "YOUR_JWT_TOKEN"
    },
    {
      "key": "sourceId",
      "value": "source-1"
    }
  ]
}
